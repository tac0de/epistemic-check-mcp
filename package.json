  "devDependencies": {
    "@types/babel__traverse": "^7.20.6",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "prettier": "^3.4.2",
    "globals": "^15.14.0",
    "typescript-eslint": "^8.18.2"
